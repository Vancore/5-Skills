<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FiveSkills" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/rose_600</item>
        <item name="colorOnPrimary">@color/grey_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_dark</item>
        <item name="colorSecondaryVariant">@color/rose_800</item>
        <item name="colorOnSecondary">@color/grey_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FiveSkills.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FiveSkills.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FiveSkills.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>